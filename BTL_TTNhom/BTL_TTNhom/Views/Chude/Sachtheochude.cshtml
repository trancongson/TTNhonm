@using BTL_TTNhom.Models.Entity;
@model List<SACH>
@{
    ViewBag.Title = "Sach theo chu de";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/css/style.css" rel="stylesheet" />

<section class="slider">
    <div class="container" style="background-color: white;">
        <div class="row" style="padding-top: 20px;">
            <div class="col-lg-3">
                @Html.Action("ChudePartial", "Chude")
            </div>
            <div class="col-lg-9">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/Image/slider-1.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/Image/slider-2.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/Image/slider-3.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <div class="imge" style="margin-top: 25px;">
                    <img src="~/Image/banner.jpg" style="width: 32%; height: auto;" alt="Alternate Text" />
                    <img src="~/Image/banner2.jpg" style="width: 32%; height: auto;" alt="Alternate Text" />
                    <img src="~/Image/banner3.jpg" style="width: 32%; height: auto;" alt="Alternate Text" />
                </div>
            </div>
        </div>
    </div>
</section>

<section class="product">
    <div class="container" style="background-color: white;">
        <div class="row" style="padding-top: 20px;">
            <div class="col-lg-12">
                <h1 class="title">
                    <span>Sách theo chủ đề</span>
                </h1>
            </div>
            <div class="product-ct row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-3 col-6 product-items">
                        <div class="product-item">
                            <div class="image-size">
                                <div class="img-lay">
                                    <img class="img-responsive" src="~/@item.ANHBIA" alt="#">
                                    <div class="overlay">
                                        <img class="img-responsive" src="~/@item.ANHBIA" alt="#">
                                    </div>
                                    <div class="overlay-1">
                                        <a class="btn btn-primary" role="button" href="@Url.Action("Details","Sach", new { @masach = item.MASACH})">Xem thêm</a>
                                    </div>
                                </div>
                                <span class="new"></span>
                            </div>
                            <div class="content-item text-center">
                                <h2 class="name">
                                    <a href="@Url.Action("Details","Sach", new { @masach = item.MASACH})">@item.TENSACH</a>
                                </h2>
                                <div class="price">
                                    <span>@(String.Format("{0:0,0}", @item.GIABAN)) ₫</span>
                                </div>
                                <div class="button">
                                    <a href="@Url.Action("AddItem","CartItem", new { productId=item.MASACH, quantity=1 })" class="btn btn-default">Mua</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

