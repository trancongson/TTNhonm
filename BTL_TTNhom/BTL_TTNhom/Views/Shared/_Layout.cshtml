<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/Site.css">
    <link rel="stylesheet" href="~/Content/css/owl.carousel.css">
    <link rel="stylesheet" href="~/Content/css/owl.theme.css">
    <link rel="icon" href="~/Image/logoicon.ico" type="image/icon">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <script src="~/Scripts/js/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/js/owl.carousel.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

</head>
<body>

    <header class="header">
        <section class="top-header">
            <div class="container" style="background-color: white;">
                <div class="row">
                    <div class="col-lg-12">
                        <ul class="contact float-left">
                            <li>
                                <i class="fas fa-phone-square"></i>
                                <span>Hotline:0363600035</span>
                            </li>
                        </ul>
                        <nav class="navbar navbar-expand-lg navbar-light float-right d-none d-lg-block d-xl-block" style="padding: 0;">
                            <ul class="navbar-nav top-right-header">
                                <li class="nav-item top-check">
                                    <a class="nav-link" href="/KhachHang/Kiemtradonhang">
                                        <i class="far fa-edit"></i>
                                        <span>Kiểm tra đơn hàng</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link top-cart" href="/CartItem">
                                        <i class="fas fa-shopping-cart"></i>
                                        <span>Giỏ hàng</span>
                                    </a>
                                </li>
                                <li class="nav-item top-login">
                                    <a class="nav-link" href="/KhachHang/Dangnhap">
                                        <i class="fas fa-sign-in-alt"></i>
                                        <span>Đăng nhập</span>
                                    </a>
                                </li>
                                <li class="nav-item top-register">
                                    <a class="nav-link" href="/KhachHang/Dangky">
                                        <i class="fas fa-key"></i>
                                        <span>Đăng ký</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                        <div class="show-mobile d-lg-none d-xl-none float-right">
                            <div class="user">
                                <div class="dropdown">
                                    <i class="fas fa-user" data-toggle="dropdown"></i>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="/KhachHang/Dangky">
                                                <i class="fas fa-key"></i>
                                                <span>Đăng ký</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="/KhachHang/Dangnhap">
                                                <i class="fas fa-sign-in-alt"></i>
                                                <span>Đăng nhập</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="access">
                                <div class="dropdown">
                                    <i class="fas fa-list" data-toggle="dropdown"></i>
                                    <ul class="dropdown-menu">
                                        <li class="top-check">
                                            <a href="/KhachHang/Kiemtradonhang">
                                                <i class="far fa-edit"></i>
                                                <span>Kiểm tra đơn hàng</span>
                                            </a>
                                        </li>
                                        <li class="top-cart">
                                            <a href="/CartItem">
                                                <i class="fas fa-shopping-cart"></i>
                                                <span>Giỏ hàng</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="logo-header">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 text-center" style="margin-top: 10px;">
                        <a href="/">
                            <img src="~/Image/logo-sach.png" alt="#">
                        </a>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-5 col-xs-12 search-header">
                        <form class="input-group" action="/Home/Timkiem" method="get" role="search" id="voice-search">
                            <input type="text" class="form-control" placeholder="Tìm kiếm sản phẩm..." name="tensach">
                            <div class="input-group-append">
                                <button class="btn btn-outline-info" type="submit"><i class="fas fa-search"></i></button>
                            </div>
                        </form>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 d-none d-lg-block d-xl-block">
                        <div class="cart float-right">
                            <a href="/CartItem">
                                <i class="fas fa-shopping-bag fa-2x"></i>
                                <span>0 sp - 0 đ </span>
                                <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="menu-header">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12" style="padding: 0;">
                        <nav class="navbar navbar-expand-lg navbar-light menu-body">
                            <div class="navbar-brand"></div>
                            <button class="navbar-toggler btn-menu" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse menu-content" id="navbarNav">
                                <ul class="navbar-nav">
                                    <li class="nav-item menu-body-1">
                                        <a class="nav-link active" href="/">Trang chủ <span class="sr-only">(current)</span></a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Giới thiệu</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("Sachmoi","Chude")">Sách</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Hướng dẫn</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Liên hệ</a>
                                    </li>
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </section>
    </header>
    

    @RenderBody()

    @Html.Action("PartnerPartial", "Home")

    <footer class="footer">
        <div class="container" style="background-color: rgb(57, 57, 57);">
            <div class="row">
                <div class="col-lg-3 col-12 footer-col footer-col-1">
                    <div class="footer-logo">
                        <img src="~/Image/logo-sach.png" alt="#">
                    </div>
                    <div class="footer-add">
                        <div class="address">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>680 XVNT - P.25 - Bình Thạnh - Hồ Chí Minh</span>
                        </div>
                        <div class="address">
                            <i class="fas fa-envelope"></i>
                            <a href="#">info@runtime.vn</a>
                        </div>
                        <div class="address">
                            <i class="fas fa-phone-square"></i>
                            <span>Phone: 0363600035</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-12 footer-col">
                    <h3>
                        <span>Giới thiệu</span>
                    </h3>
                    <ul>
                        <li>
                            <a href="#">Về chúng tôi</a>
                        </li>
                        <li>
                            <a href="#">Lĩnh vực hoạt động</a>
                        </li>
                        <li>
                            <a href="#">Tuyển dụng</a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-3 col-12 footer-col">
                    <h3>
                        <span>Trợ giúp</span>
                    </h3>
                    <ul>
                        <li>
                            <a href="#">Hướng dẫn thanh toán</a>
                        </li>
                        <li>
                            <a href="#">Quy định đổi trả</a>
                        </li>
                        <li>
                            <a href="#">Chính sách bán hàng</a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-3 col-12 footer-col">
                    <h3>
                        <span>Facebook</span>
                    </h3>
                    <div class="footer-icon">
                        <ul>
                            <li>
                                <a href="#"><i class="fab fa-google-plus-g"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fab fa-facebook-f"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fab fa-youtube"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fab fa-twitter"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="right-footer">
            <a href="#" id="gotop" class="backtop back-to-top show" title="Lên đầu trang">
                <span><i class="fas fa-angle-up"></i></span>
            </a>
        </div>
    </footer>

    <script src="~/Scripts/js/script.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
