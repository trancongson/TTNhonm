@using BTL_TTNhom.Models;
@model List<CTSach>
<link href="~/Content/css/style.css" rel="stylesheet" />

<section class="product">
    <div class="container" style="background-color: white;">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="title">
                    <span>Sách Hot</span>
                </h1>
            </div>
            <div class="product-ct row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-3 col-6 product-items">
                        <div class="product-item">
                            <div class="image-size">
                                <div class="img-lay">
                                    <img class="img-responsive" src="~/@item.AnhBia" alt="#">
                                    <div class="overlay">
                                        <img class="img-responsive" src="~/@item.AnhBia" alt="#">
                                    </div>
                                    <div class="overlay-1">
                                        <a class="btn btn-primary" role="button" href="@Url.Action("Details","Sach", new { @masach = item.MaSach})">Xem thêm</a>
                                    </div>
                                </div>
                                <span class="new"></span>
                            </div>
                            <div class="content-item text-center">
                                <h2 class="name">
                                    <a href="@Url.Action("Details","Sach", new { @masach = item.MaSach})">@item.TenSach</a>
                                </h2>
                                <div class="price">
                                    <span>@(String.Format("{0:0,0}", @item.GiaBan)) ₫</span>
                                </div>
                                <div class="button">
                                    <a href="@Url.Action("AddItem","CartItem", new { productId=item.MaSach, quantity=1 })" class="btn btn-default">Mua</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>