@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Đăng nhập tài khoản";
}
<link href="~/Content/css/Dangnhap.css" rel="stylesheet" />
@using BTL_TTNhom.Models.Entity;
@model KHACHHANG

<section class="slider">
    <div class="container" style="background-color: white;">
        <div class="row" style="padding-top: 20px;">
            <div class="col-lg-3">
                @Html.Action("ChudePartial", "Chude")
            </div>
            <div class="col-lg-9">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/Image/slider-1.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/Image/slider-2.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/Image/slider-3.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <div class="imge" style="margin-top: 25px;">
                    <img src="~/Image/banner.jpg" style="width: 32%; height: auto;" alt="Alternate Text" />
                    <img src="~/Image/banner2.jpg" style="width: 32%; height: auto;" alt="Alternate Text" />
                    <img src="~/Image/banner3.jpg" style="width: 32%; height: auto;" alt="Alternate Text" />
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section-2">
    <div class="container" style="background-color: white; padding-bottom: 20px;">
        <div class="row" style="padding-top: 20px;">
            <div class="col-lg-12">
                <h1 class="title">
                    <span>Đăng nhập</span>
                </h1>
            </div>
            <div class="col-lg-6 col-12">
                <div class="left-login">
                    <p style="padding-left:6px; margin-top:10px; color:red;">Nếu bạn có tài khoản, đăng nhập tại đây.</p>
                    @using (Html.BeginForm("Dangnhap", "Khachhang", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label for="inputEmail">Tài khoản: </label>
                            <input type="text" class="form-control" id="inputEmail" name="TAIKHOAN">
                        </div>
                        <div class="form-group">
                            <label for="inputPassword">Mật khẩu: </label>
                            <input type="password" class="form-control" id="inputPassword" name="MATKHAU">
                        </div>
                        <p style="color:red;">@ViewBag.ThongBao</p>
                        <button type="submit" class="btn btn-primary">Đăng nhập</button>
                    }
                    <br><hr>
                    <span>Bạn chưa có tài khoản, hãy <a href="~/Khachhang/Dangky">Đăng ký tại đây</a></span>
                </div>
            </div>
            <div class="col-lg-6 col-12">
                <div class="right-login">
                    <form>
                        <p>Bạn quên mật khẩu? Nhập địa chỉ email để lấy lại mật khẩu qua email.</p>
                        <div class="form-group">
                            <label for="inputEmail1">Email: </label>
                            <input type="email" class="form-control" id="inputEmail1">
                        </div>
                        <button type="submit" class="btn btn-primary">Lấy lại mật khẩu</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@Html.Action("PartialSachHot", "Sach")